<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:jsonpath.ViewModels"
             mc:Ignorable="d"
             x:Class="jsonpath.Views.CustomView"
			 x:DataType="vm:ViewModelBase" 
			 Loaded="OnLoaded">
		<Grid ColumnDefinitions="2*,2*" RowDefinitions="2*,30,30,30" Margin="10">
			<TextBox  Name="richTextBox" Grid.Row="0" Grid.Column="0" AcceptsReturn="True"></TextBox>
			<TextBox  Name="richTextBox2" Grid.Row="0" Grid.Column="1" AcceptsReturn="True"></TextBox>
			<Label    Name="errorMessage" Grid.Row="1" Grid.Column="0" TextElement.Foreground="Red">This is an error message</Label>
			<TextBox  Name="jsonPathTextBox" Grid.Row="1" Grid.Column="1"  Watermark="$.store[*].books[?(@.id > 5)].author%c%k%u%kc%uc%kcs%ucs"></TextBox>
			<CheckBox Name="nullIfNotExistentCheckBox" Grid.Row="2" Grid.Column="1">Non existent property as null</CheckBox>
			<CheckBox Name="ignoreNullCheckBox" Grid.Row="3" Grid.Column="1">Ignore null valued keys</CheckBox>
		</Grid>
</UserControl>
